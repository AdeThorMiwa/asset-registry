generator client {
  provider = "prisma-client-js"
  output   = "./prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Asset {
  assetId        Decimal  @id @db.Decimal(78, 0)
  description    String
  registrationTs DateTime
  registeredBy   String
  currentOwner   String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  transfers      AssetTransfer[]

  @@index([currentOwner])
}

model AssetTransfer {
  id            BigInt   @id @default(autoincrement())
  assetId       Decimal  @db.Decimal(78, 0)
  asset         Asset    @relation(fields: [assetId], references: [assetId], onDelete: Cascade)
  previousOwner String
  newOwner      String
  blockNumber   BigInt
  blockTimestamp DateTime
  txHash        String
  logIndex      Int
  createdAt     DateTime @default(now())

  @@unique([txHash, logIndex])
  @@index([assetId])
  @@index([blockNumber])
}

model LogReaderCursor {
  key       String  @id
  value     String
  updatedAt DateTime @updatedAt
}